@using Siscom.Models
@model Siscom.Areas.Global.Models.PersonaModels

@if (Model.ListaPuesto != null)
{
    if (Model.ListaPuesto.Count > 0)
    {
        <div class="panel panel-default">
            <div class="panel-body row">
                <div>Sólo se muestra los 50  últimos Puestos del resultado de busqueda</div>
                <table id="EmpleadosTablejefe" class="table table-striped table-bordered table-hover table-condensed " cellspacing="0" style="font-size:80%;">
                    <thead>
                        <tr>
                            <th class="text-center"><p>DESCRIPCIÓN DEL PUESTO</p></th>
                            <th class="text-center"><p>PRUEBAS</p></th>
                            <th class="text-center"><p>Nº CANDIDATOS</p></th>
                            <th class="text-center"><p>USUARIO</p></th>
                            <th class="text-center" hidden="hidden"><p>ID_PUESTO</p></th>
                            <th class="text-center"><p>ACCIÓN</p></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ListaPuesto)
                        {
                            <tr>
                                <td class="text-center"><p>@(item.vc_desc_puesto)</p></td>
                                <td class="text-center"><p>@(item.vc_desc_prueba)</p></td>
                                <td class="text-center"><p>@(item.cantidad_usuario)</p></td>
                                <td class="text-center"><p>@(item.vc_desc_sub_cuenta)</p></td>
                                <td class="text-center" hidden="hidden"><p>@(item.nu_id_puesto)</p></td>
                                <th class="text-center">  
                                    <button id="buscarBtn" type="button" class="btn btn-info btn-sm" 
                                        onclick="SeleccionarItemPuesto('@item.nu_id_puesto','@Model.Persona.opcion1');">
                                        <i class="fa fa-check"></i>
                                    </button>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
}